<Window x:Class="StockControl.Views.ReportMasterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockControl.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Майстер звітів" Height="300" Width="300" Unloaded="Window_Unloaded">
    <Grid>
        <Label x:Name="label1" Content="Виберіть тип звіту" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="16,50,0,0" VerticalAlignment="Top" Width="248"/>
        <Button x:Name="CancelButton" Content="Скасувати" HorizontalAlignment="Left" Margin="16,215,0,0" VerticalAlignment="Top" Width="103" Click="CancelButton_Click"/>
        <Button x:Name="NextButton" Content="Далі" HorizontalAlignment="Left" Margin="164,215,0,0" VerticalAlignment="Top" Width="100" Click="NextButton_Click"/>

    </Grid>
</Window>
